<p id="notice"><%= notice %></p>

<h1>物件一覧</h1>

<hr>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃貸料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @propeties.each do |propety| %>
      <tr>
        <td><%= propety.name %></td>
        <td><%= propety.rent %>円</td>
        <td><%= propety.address %></td>
        <td><%= propety.age %></td>
        <td><%= propety.remarks %></td>
        <td><%= link_to '詳細', propety %></td>
        <td><%= link_to '編集', edit_propety_path(propety) %></td>
        <td><%= link_to '削除', propety, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

