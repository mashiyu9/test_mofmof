<%= form_for(propety) do |f| %>
  <% if propety.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(propety.errors.count, "error") %> prohibited this propety from being saved:</h2>

      <ul>
      <% propety.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :物件名%>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :賃貸料 %>
    <%= f.number_field :rent %>円
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :築年数 %>
    <%= f.number_field :age %>年
  </div>

  <div class="field">
    <%= f.label :備考 %>
    <%= f.text_area :remarks %>
  </div>

  <%= f.label :nearest_stations, :最寄駅情報 %><br />
  <%= f.fields_for :nearest_stations do |ns| %>
    <p>最寄り駅<%= @n %></p>
      <%= ns.label :route_name, :路線名%>
      <%= ns.text_field :route_name %><br />
      <%= ns.label :station, :駅名%>
      <%= ns.text_field :station %><br />
      <%= ns.label :walking_time, :徒歩分数%>
      <%= ns.text_field :walking_time %>分<br />
      <%= ns.label :_destroy, :削除 %>
      <%= ns.check_box :_destroy %>
      <% @n += 1 %>
  <% end %>
  <div class="actions">
    <%= f.submit :登録 %>
  </div>
<% end %>

